{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Cards",
  "description": "The file used to generate cards",
  "type": "array",
  "definitions": {
    "cardType": {
      "enum": ["RESOURCE", "STARTER", "GOLD", "OBJECTIVE"]
    },
    "objectiveType": {
      "enum": ["GEOMETRIC", "COUNTING"]
    },
    "resourceType": {
      "enum": ["PLANT", "ANIMAL", "FUNGI", "INSECT"]
    },
    "objectType": {
      "enum": ["QUILL", "INKWELL", "MANUSCRIPT"]
    },
    "pointConditionType": {
      "enum": ["OBJECTS", "CORNERS"]
    }
  },
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "minimum": 0
      },
      "type": {
        "$ref": "#/definitions/cardType"
      },
      "points": {
        "type": "integer",
        "minimum": 0
      },
      "objectiveType": {
        "$ref": "#/definitions/objectiveType"
      },
      "objectiveGeometry": {
        "type": "array",
        "minItems": 3,
        "maxItems": 3,
        "items": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "$ref": "#/definitions/resourceType"
          }
        }
      },
      "objectiveResources": {
        "type": "object",
        "patternProperties": {
          "^(PLANT|ANIMAL|FUNGI|INSECT)$": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": false
      },
      "objectiveObjects": {
        "type": "object",
        "patternProperties": {
          "^(QUILL|INKWELL|MANUSCRIPT)$": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": false
      },
      "backPermanentResources": {
        "type": "array",
        "$comment": "If there are none, just omit the array",
        "minItems": 1,
        "maxItems": 3,
        "items": {
          "$ref": "#/definitions/resourceType"
        }
      },
      "placementCondition": {
        "type": "array",
        "$comment": "If there are none, just omit the array",
        "minItems": 1,
        "maxItems": 5,
        "items": {
          "$ref": "#/definitions/resourceType"
        }
      },
      "pointCondition": {
        "$ref": "#/definitions/pointConditionType"
      },
      "pointConditionObject": {
        "$ref": "#/definitions/objectType"
      }
    },
    "additionalProperties": false,
    "required": ["id", "type"]
  }
}