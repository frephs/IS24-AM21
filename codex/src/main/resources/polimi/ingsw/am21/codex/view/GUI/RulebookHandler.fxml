<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="ruleBookContainer" styleClass="inner-border" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="529.0" prefWidth="427.0" stylesheets="@Style.css">
         <children>
            <VBox styleClass="inner-border" stylesheets="@Style.css">
               <children>
                  <VBox styleClass="window" stylesheets="@Style.css">
                     <children>
                        <VBox alignment="BOTTOM_CENTER" prefHeight="514.0" prefWidth="845.0">
                           <children>
                              <HBox alignment="CENTER">
                                 <children>
                                    <Label alignment="CENTER" prefHeight="48.0" prefWidth="522.0" styleClass="subtitle" text="Instructions">
                                       <font>
                                          <Font size="18.0" />
                                       </font></Label>
                                    <Button id="close-rulebook-button" mnemonicParsing="false" prefHeight="33.0" prefWidth="36.0" styleClass="close-button" text="x" />
                                 </children>
                                 <padding>
                                    <Insets left="10.0" right="5.0" />
                                 </padding>
                              </HBox>
                              <HBox fx:id="pageContainer" alignment="CENTER" prefHeight="290.0" prefWidth="521.0">
                                 <children>
                                       <ImageView fx:id="page" fitHeight="383.0" fitWidth="575.0" pickOnBounds="true" preserveRatio="true" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="109.0" prefWidth="835.0">
                                 <children>
                                    <Button id="previous-page-button" mnemonicParsing="false" prefHeight="58.0" prefWidth="410.0" text="«">
                                       <HBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </HBox.margin>
                                    </Button>
                                    <Button id="next-page-button" mnemonicParsing="false" prefHeight="58.0" prefWidth="410.0" text="»">
                                       <HBox.margin>
                                          <Insets bottom="5.0" right="5.0" top="5.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
         <styleClass>
            <String fx:value="window-border" />
            <String fx:value="rounded" />
         </styleClass>
      </VBox>
   </children>
</VBox>
